{
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "es2017"
    ],
    "rootDir": ".",
    "outDir": "./transpiled",
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*"
      ],
      "spec/*": [
        "src/spec/*"
      ],
      "util/*": [
        "src/util/*"
      ]
    },
    "inlineSourceMap": true,
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  }
}
